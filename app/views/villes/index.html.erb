<p id="notice"><%= notice %></p>

<h1>Villes</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @villes.each do |ville| %>
      <tr>
        <td><%= ville.nom %></td>
        <td><%= ville.description %></td>
        <td><%= ville.slug %></td>
        <td><%= link_to 'Show', ville %></td>
        <td><%= link_to 'Edit', edit_ville_path(ville) %></td>
        <td><%= link_to 'Destroy', ville, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ville', new_ville_path %>
