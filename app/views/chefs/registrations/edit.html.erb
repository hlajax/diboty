<div class="container">
  <div class="row">
    <%=render "menus/main" %>
    <div class="col-lg-7 col-12">
      <div style="background-color:white;width:100%;padding:3%;border-radius:5px;box-shadow: 0 4px 8px 0 rgba(0,0,0,0);">
<h5 style="background-color: #ae211b; color: white;padding: 2.5%;text-transform: uppercase;font-weight:bold;margin-top:1%;">Modifier mes infos</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="form-group col-lg-7 col-12">
    <label for="compte"><small>nom complet</small></label>
    <%= f.text_field :nom, class:"form-control"%>
  </div>
      <div class="form-group col-lg-5 col-12">
    <label for="compte"><small>nationalité</small></label>
    <%= f.text_field :nationalite, class:"form-control"%>
  </div>
  <div class="form-group col-lg-5 col-12">
    <label for="compte"><small>numéro de téléphone</small></label>
    <%= f.telephone_field :telephone, class:"form-control"%>
  </div>

    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>email</small></label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", required: :true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>mot de passe<i>(laissez vide si vous ne voulez pas le changer)</i></small></label>
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>confirmer mot de passe</small></label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="form-group col-lg-3 col-12">
    <label for="compte"><small>sexe</small></label>
    <%= f.collection_select :sex_id, Sex.all, :id, :nom, {prompt:"Choisir"},class:"select-css form-control", required: :true  %>
  </div>

  
  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>date de naissance</small></label>
    <%= f.text_field :date,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>lieu de naissance</small></label>
    <%= f.text_field :lieu,class:"form-control", required: :true  %>
  </div>

    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>statut matrimonial</small></label>
    <%= f.collection_select :statut_id, Statut.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>

    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>situation professionnelle</small></label>
    <%= f.collection_select :situation_id, Situation.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>



  </div>
  </div>
  </div>
<div class="col-lg-5 col-12">
  <div style="background-color:white;width:100%;padding:3%;border-radius:5px;box-shadow: 0 4px 8px 0 rgba(0,0,0,0);">
  <div class="row">

    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>province</small></label>
    <%= f.collection_select :province_id, Province.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>commune/ville/département</small></label>
    <%= f.text_field :commune,class:"form-control", required: :true  %>
  </div>

    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>quartier/village</small></label>
    <%= f.text_field :quartier,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>arrondissement</small></label>
    <%= f.collection_select :arrondissement_id, Arrondissement.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>



    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>cnamgs(optionnel)</small></label>
    <%= f.text_field :cnamgs,class:"form-control"  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>cnss(optionnel)</small></label>
    <%= f.text_field :cnss,class:"form-control" %>
  </div>

    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>numéro one(optionnel)</small></label>
    <%= f.text_field :one,class:"form-control"  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>réligion</small></label>
    <%= f.text_field :religion,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>lieu de prière</small></label>
    <%= f.text_field :lieu_de_priere,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-4 col-12">
          <label for="compte"><small>photo du chef de famille</small></label>
          <%= f.file_field :photo %>
        </div>
          <div class="form-group col-lg-4 col-12">
    <label for="compte"><small><i>nous avons besoin de votre mot de passe pour confirmer vos changements</i></small></label>
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control", required: :true %>
  </div>
    <div class="col-lg-12 col-12">
    <%= f.button 'Valider et modifier le compte'.html_safe, type: :submit, class:"btn btn-kit-yellow btn-block", :data => {:disable_with => "<i class='fa fa-spinner fa-spin'></i> Modification du compte..."} %>
  </div>
<% end %>
 </div>
    </div>
 </div>
</div>