<div class="container">
  <div class="row">
    <%=render "menus/nc" %>
    <div class="col-lg-7 col-12 m-top-mini">
      <div style="background-color:white;width:100%;padding:3%;border-radius:5px;box-shadow: 0 4px 8px 0 rgba(0,0,0,0);">
<h5 style="color: #ae211b;padding: 2.5%;text-transform: uppercase;font-weight:bold;margin-top:1%;">Créer un compte</h5>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="form-group col-lg-7 col-12">
    <label for="compte"><small>nom complet</small></label>
    <%= f.text_field :nom, class:"form-control"%>
  </div>


  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>email</small></label>
    <%= f.email_field :email, class:"form-control" %>
  </div>


    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>mot de passe</small></label>
    <%= f.password_field :password, class:"form-control" %>
  </div>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>confirmer mot de passe</small></label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>
    <div class="col-lg-12 col-12">
    <%= f.button 'Valider et créer le compte'.html_safe, type: :submit, class:"btn btn-kit-yellow btn-block", :data => {:disable_with => "<i class='fa fa-spinner fa-spin'></i> Création du compte..."} %>
  </div>
<% end %>
  </div>
  </div>
  </div>

  </div>
</div>