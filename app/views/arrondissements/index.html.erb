<p id="notice"><%= notice %></p>

<h1>Arrondissements</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arrondissements.each do |arrondissement| %>
      <tr>
        <td><%= arrondissement.nom %></td>
        <td><%= arrondissement.description %></td>
        <td><%= arrondissement.slug %></td>
        <td><%= link_to 'Show', arrondissement %></td>
        <td><%= link_to 'Edit', edit_arrondissement_path(arrondissement) %></td>
        <td><%= link_to 'Destroy', arrondissement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

