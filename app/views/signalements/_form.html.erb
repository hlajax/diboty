  <% end %>
<div class="col-lg-12 col-12" style="padding:1%;">
      <div style="background-color:white;width:100%;padding:3%;border-radius:5px;box-shadow: 0 4px 8px 0 rgba(0,0,0,0);">
      <div class="row">
        <div class="col-12">
      <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/"><small>Accueil</small></a></li>
    <li class="breadcrumb-item active" aria-current="page"><small>Gabonais(e) en détresse</small></li>
  </ol>
</nav>
    </div>
        <div class="col-lg-12 col-12">
      <h5 class="text-titre">Informations</h5>
    </div>
      <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>nom</small></label>
    <%= form.text_field :nom,class:"form-control", required: :true  %>
  </div>
  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>pays</small></label>
    <%= form.text_field :pays,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>ville</small></label>
    <%= form.text_field :ville,class:"form-control", required: :true  %>
  </div>



<div class="form-group col-lg-4 col-12">
    <label for="compte"><small>sexe</small></label>
    <%= form.collection_select :sex_id, Sex.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true %>
  </div>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>numéro de téléphone</small></label>
    <%= form.telephone_field :contact_whatsapp,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>date d'entrée dans le pays</small></label>
    <%= form.date_field :date,class:"form-control", required: :true  %>
  </div>

    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>raison du séjour</small></label>
    <%= form.text_area :raison_du_sejour,class:"form-control", required: :true  %>
  </div>

    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>télécharger copie du passeport avec visa du pays</small></label>
    <%= form.file_field :pieces_jointes, required: :true %>
  </div>


  <div class="col-lg-12 col-12">
    <%= form.button 'Valider'.html_safe, type: :submit, class:"btn btn-kit-yellow btn-block", :data => {:disable_with => "<i class='fa fa-spinner fa-spin'></i> Validation..."} %>
  </div>



   </div>
  </div>
