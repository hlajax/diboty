<div class="container-fluid intro" id="intro">
  <div class="row">
    <%=render "menus/main" %>
    <div class="col-lg-6 offset-lg-1 col-12 p-4">
<%= form_with(model: don, local: true) do |form| %>
  <% if don.errors.any? %>
