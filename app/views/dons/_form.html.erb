  <% end %>
<div class="row">
    <div class="col-lg-12 col-12" style="padding:1%;">
      <div style="background-color:white;width:100%;padding:3%;border-radius:5px;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);">
      <div class="row">
        <div class="col-lg-12 col-12">
      <h5 class="text-titre">Informations</h5>
    </div>
  <div class="form-group col-lg-6 col-12">
    <%= form.label :nom %>
    <%= form.text_field :nom,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <%= form.label :nom_entreprise %>
    <%= form.text_field :nom_entreprise,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <%= form.label :numero_de_telephone %>
    <%= form.telephone_field :numero_de_telephone,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <%= form.label :email %>
    <%= form.email_field :email,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <%= form.label :adresse %>
    <%= form.text_field :adresse,class:"form-control" %>
  </div>



  <div class="form-group col-lg-6 col-12">
    <%= form.label :date_de_depot_a_la_banque_alimentaire %>
