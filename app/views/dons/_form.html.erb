<div class="container-fluid">
  <div class="row">
    <%=render "menus/main" %>
    <div class="col-lg-6 offset-lg-1 col-12 p-4">
<%= form_with(model: don, local: true) do |form| %>
  <% if don.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(don.errors.count, "error") %> prohibited this don from being saved:</h2>

      <ul>
      <% don.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
    <div class="col-lg-12 col-12" style="padding:1%;">
      <div style="background-color:white;width:100%;padding:3%;border-radius:5px;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);">
      <div class="row">
        <div class="col-lg-12 col-12">
      <h5 class="text-titre">Informations</h5>
    </div>
  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>nom</small></label>
    <%= form.text_field :nom,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>nom de l'entreprise(laissez vide si vous êtes une personne physique)</small></label>
    <%= form.text_field :nom_entreprise,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>numéro de téléphone</small></label>
    <%= form.telephone_field :numero_de_telephone,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>adresse email</small></label>
    <%= form.email_field :email,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>adressee</small></label>
    <%= form.text_field :adresse,class:"form-control", required: :true  %>
  </div>



  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>date d'éxécution de la promesse</small></label>
    <%= form.date_field :date,class:"form-control", required: :true  %>
  </div>
  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>détails du don</small></label>
    <%= form.text_area :detail,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <%= form.button 'Valider'.html_safe, type: :submit, class:"btn btn-kit-yellow btn-block", :data => {:disable_with => "<i class='fa fa-spinner fa-spin'></i> Validation..."} %>
  </div>
  </div>
  </div>
  </div>
<% end %>
</div>
</div>
</div>
</div>