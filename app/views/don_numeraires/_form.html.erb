<div class="container">
  <div class="row">
    <%=render "menus/main" %>
    <div class="col-lg-8 offset-lg-2 col-12 p-4">
<%= form_with(model: don_numeraire, local: true) do |form| %>
  <% if don_numeraire.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(don_numeraire.errors.count, "error") %> prohibited this don_numeraire from being saved:</h2>

      <ul>
      <% don_numeraire.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-lg-12 col-12" style="padding:1%;">
      <div style="background-color:white;width:100%;padding:3%;border-radius:5px;box-shadow: 0 4px 8px 0 rgba(0,0,0,0);">
      <div class="row">
        <div class="col-12">
      <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/"><small>Accueil</small></a></li>
    <li class="breadcrumb-item active" aria-current="page"><small>Faire un Don en numéraire</small></li>
  </ol>
</nav>
    </div>
        <div class="col-lg-6 col-12">
      <h5 class="text-titre">Informations</h5>
    </div>
  <div class="form-group col-lg-12 col-12">
    <label for="compte"><small>nom</small></label>
    <%= form.text_field :nom,class:"form-control", required: :true %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>dénomination(laissez vide si vous êtes une personne physique)</small></label>
    <%= form.text_field :nom_entreprise,class:"form-control"  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>numéro de téléphone</small></label>
    <%= form.telephone_field :numero_de_telephone,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>adresse email</small></label>
    <%= form.email_field :email,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>adresse</small></label>
    <%= form.text_field :adresse,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>montant</small></label>
    <%= form.text_field :montant,class:"form-control" , required: :true %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>nature du versement</small></label>
    <%= form.collection_select :nature_id, Nature.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>

  

  <div class="col-lg-12 col-12">
    <%= form.button 'Valider'.html_safe, type: :submit, class:"btn btn-kit-yellow btn-block", :data => {:disable_with => "<i class='fa fa-spinner fa-spin'></i> Validation..."} %>
  </div>
  </div>
  </div>
  </div>
<% end %>
</div>
</div>
</div>
</div>