<p id="notice"><%= notice %></p>

<h1>Constructions</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constructions.each do |construction| %>
      <tr>
        <td><%= construction.nom %></td>
        <td><%= construction.description %></td>
        <td><%= construction.slug %></td>
        <td><%= link_to 'Show', construction %></td>
        <td><%= link_to 'Edit', edit_construction_path(construction) %></td>
        <td><%= link_to 'Destroy', construction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

