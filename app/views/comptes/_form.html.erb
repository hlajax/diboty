<div class="container">
  <div class="row">
    <%=render "menus/main" %>
    <div class="col-lg-8 offset-lg-2 col-12 p-4">
<%= form_with(model: compte, local: true) do |form| %>
  <% if compte.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(compte.errors.count, "error") %> prohibited this compte from being saved:</h2>

      <ul>
      <% compte.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <div class="row">
        <div class="col-12">
      <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/"><small>Accueil</small></a></li>
    <li class="breadcrumb-item active" aria-current="page"><small>Créer un compte</small></li>
  </ol>
</nav>
    </div>
        <div class="col-12">
          <h4 class="titre">Créez votre Compte famille </h4>
      <p>
        <small>(et ceux des foyers de vos proches n'ayant pas accès à internet)</small>
      </p>
        </div>
        <div class="form-group col-lg-4 col-12">
          <label for="compte"><small>nom de la famille</small></label>
          <%= form.text_field :nom, class:"form-control", required: :true %>
        </div>
        <div class="form-group col-lg-7 col-12">
          <label for="compte"><small>nom du chef de famille</small></label>
          <%= form.text_field :nom_chef, class:"form-control", required: :true%>
        </div>
              <div class="form-group col-lg-5 col-12">
    <label for="compte"><small>nationalité</small></label>
    <%= form.text_field :nationalite, class:"form-control", required: :true%>
  </div>
  <div class="form-group col-lg-5 col-12">
    <label for="compte"><small>numéro de téléphone</small></label>
    <%= form.telephone_field :telephone, class:"form-control", required: :true%>
  </div>
  
    <div class="form-group col-lg-3 col-12">
    <label for="compte"><small>sexe</small></label>
    <%= form.collection_select :sex_id, Sex.all, :id, :nom, {prompt:"Choisir"},class:"select-css form-control", required: :true  %>
  </div>
    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>date de naissance</small></label>
    <%= form.date_field :date,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>lieu de naissance</small></label>
    <%= form.text_field :lieu,class:"form-control", required: :true  %>
  </div>
  
      <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>Statut matrimonial du chef de famille</small></label>
    <%= form.collection_select :statut_id, Statut.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>
    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>nombre d'épouses(pour marié polygame seulement)</small></label>
    <%= form.text_field :nombreepouse,class:"form-control" %>
  </div>

    <div class="form-group col-lg-4 col-12">
    <label for="compte"><small>situation professionnelle du chef de famille</small></label>
    <%= form.collection_select :situation_id, Situation.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>

  
  
    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>province</small></label>
    <%= form.collection_select :province_id, Province.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>

   <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>commune/ville/département</small></label>
    <%= form.text_field :commune,class:"form-control", required: :true  %>
  </div>

    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>quartier/village</small></label>
    <%= form.text_field :quartier,class:"form-control", required: :true  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>arrondissement</small></label>
    <%= form.collection_select :arrondissement_id, Arrondissement.all, :id, :nom, {prompt:"Sélectionner"},class:"select-css form-control", required: :true  %>
  </div>



    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>cnamgs(optionnel)</small></label>
    <%= form.text_field :cnamgs,class:"form-control"  %>
  </div>

  <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>cnss(optionnel)</small></label>
    <%= form.text_field :cnss,class:"form-control"  %>
  </div>

    <div class="form-group col-lg-6 col-12">
    <label for="compte"><small>numéro one(optionnel)</small></label>
    <%= form.text_field :one,class:"form-control" %>
  </div>
  <div class="form-group col-lg-4 col-12">
          <label for="compte"><small>photo du chef de famille</small></label>
          <%= form.file_field :photo%>
        </div>

  <div class="col-lg-4 col-12">
    <%= form.button 'Valider'.html_safe, type: :submit, class:"btn btn-kit-yellow btn-block", :data => {:disable_with => "<i class='fa fa-spinner fa-spin'></i> Validation..."} %>
  </div>
  </div>
<% end %>
</div>
</div>
</div>